<%= simple_form_for @reading, url: book_readings_path do |f| %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.input :status, as: :radio_buttons, collection: ["Read", "Currently Reading", "Want to Read"] %>
  <%= f.button :submit %>
<% end %>