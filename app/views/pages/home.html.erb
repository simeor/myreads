<div class="container">
  <div class="home-books">
    <h1>Pages#home</h1>

    <ul class="list-group">
      <% @top_books.each do |book| %>
      <%= link_to book_path(book) do %>
        <li class="list-group-item"><%= book.title %> (<%= book.author %>)</li>
      <% end %>
      <% end %>
    </ul>
  </div>

  <div>
    <h2>Top Books This Week</h2>
    <div class="row row-cols-2">
      <% @ranking.each do |book| %>
        <div class="col">
          <div class="card" style="max-width: 540px;">
            <div class="row">
              <div class="col-4">
                <%= image_tag("#{book["book_image"]}", class: "card-img") %>
              </div>
              <div class="col-8">
                <div class="card-body">
                  <h5 class="card-title"><%= book["rank"] %>. <%= book["title"].titleize %></h5>
                  <p class="card-text"><%= book["description"] %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
